@model IEnumerable<INV_MS.Models.TransportModel.tblTransportDetail>
    @foreach (var items in Model)
    {
        @Html.Hidden("RedirectTo", Url.Action("Index", "TransportDetail"));
        <form id="TranspayForm">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center bg-dark text-white pt-1 pb-1 rounded-left rounded-right">Add Payment of Transport</h4>
                </div>
                <div class="card-body">

                    <div class="col-4" hidden><h4>Transport ID: <span class="transportId">@items.Id</span></h4></div>
                    <div class="row col-12">
                        <div class="col-3"><h6>Company Name: <span id="companyName">@items.TblCompany.Name</span></h6></div>
                        <div class="col-2"><h6>Product Name: <span id="productName">@items.TblProduct.ProductName</span></h6></div>
                        <div class="col-2"><h6>Total Amount: <span id="totalAmount">@items.TotalAmount</span></h6></div>
                        <div class="col-3"><h6>Date of Dispatch :  <span id="dateofdispatch">@items.dispatchDate</span></h6></div>
                        <div class="col-2"><h6>Vehicle No : <span id="vehicleNo"> @items.TblVehicle.VehicleNo</span></h6></div>
                    </div>
                    <hr />
                    <br />
                    <div class="row col-12">
                        <div class="col-3"> <h6>Date of Delivery: <span id="deliveryDate">@items.deliveryDate</span> </h6></div>
                        <div class="col-3"> <h6>Broker Name : <span id="brokerName"> @items.BrokerName</span></h6></div>

                        <div class="col-3"> <h6>Date of Payment : <span id="dateofPayment"> @items.DateofPayment</span></h6></div>
                        <div class="col-2"><h6>Driver Name : <span id="driverNm"> @items.TblDriver.DriverName</span></h6></div>
                        
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5>Calculate Payment</h5>
                </div>
                <div class="card-body">
                    <div class="row col-12">
                        <div class="col-4">
                            <div class="form-group">
                                <label class="control-label">Payable</label>
                                @if (items.TotalAmountReceived == null)
                                {
                                    <input class="form-control col-md-8" id="totalamountReceived" type="number" value="0" disabled/>
                                    <span class="text-danger" id="totalamountReceivedValidation"></span>
                                }
                                else
                                {
                                    <input class="form-control col-md-8" id="totalamountReceived" type="number" value="@items.TotalAmountReceived" disabled/>
                                    <span class="text-danger" id="totalamountReceivedValidation"></span>
                                }


                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label class="control-label">Paid Amount</label>

                                <input class="form-control col-md-8 PaidAmount" id="paidAmount" type="number" value="0" />
                                <span class="text-danger" id="paidAmountValidation"></span>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label class="control-label">Remaining Balance</label>

                                <input class="form-control col-md-8 RemainingAmount" id="remaingBalance" type="number" value="0" />
                                <span class="text-danger" id="remaingBalanceValidation"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row col-12">
                        <div class="col-4">
                            <div class="form-group">
                                <label class="control-label">Date of Remaining Payment  (Optional)</label>

                                <input class="form-control col-md-8" id="dateremaingPayment" type="date" />
                                <span class="text-danger" id="dateremaingPaymentValidation"></span>
                            </div>
                        </div>
                        <div class="col-4">
                            <label class="control-label">Description (Optional)</label>

                            <textarea rows="4" cols="50" class="form-control col-md-8" id="description"></textarea>
                            <span class="text-danger" id="description"></span>
                        </div>
                        <div class="col-4">
                            <button class="btn btn-primary mt-4"><i class="fa fa-dollar-sign" id="addPayment">Add Payment</i></button>

                        </div>
                    </div>
                </div>
            </div>


        </form>





    }


    <script src="~/js/site.js"></script>

