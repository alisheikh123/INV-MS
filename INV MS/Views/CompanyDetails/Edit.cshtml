@model INV_MS.Models.tblCompanyDetail

@{
    ViewData["Title"] = "Edit";
}


<h5 class="text-center">Edit the Company Detail</h5>

<hr />
<form asp-action="Edit" id="log">
    <div class="row col-lg-12">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="companyId" class="control-label"></label>
                <select asp-for="companyId" class="form-control comp" asp-items="ViewBag.companyId"></select>
                <span asp-validation-for="companyId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row col-lg-12">

        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label"></label>
                <input asp-for="TotalAmount" class="form-control TotalAmount" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="PaidAmount" class="control-label"></label>
                <input asp-for="PaidAmount" class="form-control PaidAmount" />
                <span asp-validation-for="PaidAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="RemainingAmount" class="control-label"></label>
                <input asp-for="RemainingAmount" class="form-control RemainingAmount" disabled />
                <span asp-validation-for="RemainingAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="dateoforder" class="control-label"></label>
                <input asp-for="dateoforder" class="form-control" />
                <span asp-validation-for="dateoforder" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row col-lg-12">
      
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="dateofpayment" class="control-label"></label>
                <input asp-for="dateofpayment" class="form-control" />
                <span asp-validation-for="dateofpayment" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="dateofremainpayment" class="control-label"></label>
                <input asp-for="dateofremainpayment" class="form-control" />
                <span asp-validation-for="dateofremainpayment" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-success btn-sm" style="margin-top:35px;"><i class="fa fa-save"> Update</i></button>
            </div>
        </div>

    </div>
</form>
    


    <div>
        <a asp-action="Index" class="btn btn-primary btn-sm"><i class="fas fa-arrow-alt-circle-left"> Back to List</i></a>
    </div>

