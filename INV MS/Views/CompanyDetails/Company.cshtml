<h5 class="text-center">List of Company Detail</h5>
<div class="row col-md-12">
    <div class="col-md-5">

        <button class="btn btn-secondary btn-xs" asp-action="Index"><i class="fas fa-arrow-alt-circle-left"> Back to List</i> </button>|

        <button class="btn btn-primary btn-xs" id="Refresh"><i class="fas fa-undo"> Refresh</i></button>|
        <button class="btn btn-default btn-xs" id="Reset"><i class="fas fa-undo"> Reset</i></button>

    </div>
    <div class="col-md-2">

    </div>
    <div class="col-md-2">

    </div>
    <br /><br />
    <form id="log">



        <div id="categoryModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Company</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="control-label">Company Name</label>

                            <input asp-for="@Model.CompanyNm" class="form-control col-md-8" id="CompanyNm" type="text" />
                            <span class="text-danger" id="compnmValidation"></span>

                        </div>
                        <div class="form-group">
                            <label class="control-label">Company Code</label>

                            <input asp-for="@Model.CompanyCode" class="form-control col-md-8" id="CompanyCode" type="text" />
                            <span class="text-danger" id="compcodeValidation"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="AddCompany">Add</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

        <div class="row col-lg-12">

            <div class="col-lg-3">
                <div class="form-group">
                    <label class="control-label">Company Name</label>&emsp;&emsp;&emsp;&emsp;<i class="fas fa-plus-circle" title="Add New Category" style="color:black" id="addcat"></i>
                    <select asp-for="@Model.companyId" class="form-control comp" asp-items="ViewBag.companyId">
                        <option value="0">--Select Company--</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    <label class="control-label">Product Name</label>
                    <input asp-for="@Model.ProductName" class="form-control itmcode" />
                    <span id="ProductNameValidation" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="control-label">Description</label>
                    <input asp-for="@Model.Description" class="form-control Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="control-label">Phone No</label>
                    <input asp-for="@Model.PhoneNo" class="form-control PhoneNo" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row col-lg-12 ">
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="control-label">Total Amount</label>
                    <input asp-for="@Model.TotalAmount" class="form-control TotalAmount" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
            </div>


            <div class="col-lg-3">
                <div class="form-group">
                    <label class="control-label">Paid Amount</label>
                    <input asp-for="@Model.PaidAmount" class="form-control PaidAmount" />
                    <span asp-validation-for="PaidAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="control-label">Remaining Amount</label>
                    <input asp-for="@Model.RemainingAmount" class="form-control RemainingAmount" disabled/>
                    <span asp-validation-for="RemainingAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="control-label">Date of Order</label>
                    <input asp-for="@Model.dateoforder" class="form-control dateoforder" />
                    <span asp-validation-for="dateoforder" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row col-lg-12 ">
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="control-label">Date of Payment</label>
                    <input asp-for="@Model.dateofpayment" class="form-control dateofpayment" />
                    <span asp-validation-for="dateofpayment" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="control-label">Date of Remaining Payment</label>
                    <input asp-for="@Model.dateofremainpayment" class="form-control dateofremainpayment" />
                    <span asp-validation-for="dateofremainpayment" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">

                    <button class="btn btn-success btn-sm " id="saveItems" style="margin-top:35px;"><i class="fa fa-save"> Save</i></button>
                </div>
            </div>
        </div>
    </form>
</div>
